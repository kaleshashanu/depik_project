CROSS = arm-elf-

CC =     $(CROSS)gcc
AS =     $(CROSS)as
AR =     $(CROSS)ar
LD =     $(CROSS)ld
NM =     $(CROSS)nm
RM =     rm 
OBJCOPY = $(CROSS)objcopy

CFLAGS = -fno-builtin -nostdlib -I.
#AFLAGS = -mapcs-32 -msoft-float -mno-fpu -I.
AFLAGS = -mapcs-32  -I.
LDFLAGS= $(CFLAGS) -Wl,-elf2flt

.EXPORT_ALL_VARIABLES:


OBJ = head.o  app.o 


app.bin: $(OBJ)
	$(LD) -p -X -T app.ld $(OBJ) -o app
	$(OBJCOPY) -O binary  app app.bin

clean:
	$(RM) -rf *.o app app.bin 


%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

%.o: %.S
	$(CC) $(AFLAGS) -c -o $@ $<
